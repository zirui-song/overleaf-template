	language = {en},
	journal = {The Accounting Review},
	author = {Bharath, Sreedhar T},
	year = {2024},
	file = {Bharath - 2024 - Accounting Quality and Debt Contracting.pdf:/Users/zrsong/Zotero/storage/YTYJAABK/Bharath - 2024 - Accounting Quality and Debt Contracting.pdf:application/pdf},
